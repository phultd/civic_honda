{% extends "_layout/layout.twig" %} {% block page %}
<main id="main" class="container" data-module="main">
    <section class="hero-banner">
        {% for item in gallery %}
        <article class="article">
            <figure class="thumb">
                <img src="{{ item.image }}" alt="">
                <figcaption>
                    <h3>{{ item.title }}</h3>
                    <p>{{ item.description }}</p>
                </figcaption>
                {#
                <a class="close" href="javascript:void(0);">X</a>#}
            </figure>
        </article>
        {% endfor %}
    </section>
    <i class="arrow-left"></i>
</main>
{% endblock %}
